  "aggregation_rules": {
    "deduplication": {
      "enabled": true,
      "strategies": ["url", "title_similarity", "content_hash"],
      "titleSimilarityThreshold": 0.85,
      "contentHashAlgorithm": "sha256",
      "crossSourceWindow": "48hours"
    },
    "quality_scoring": {
      "enabled": true,
      "factors": {
        "source_reliability": 0.3,
        "content_length": 0.1,
        "freshness": 0.2,
        "engagement_metrics": 0.2,
        "technical_depth": 0.2
      },
      "minimumScore": 0.6
    },
    "content_filtering": {
      "requireKeywords": ["AI", "artificial intelligence", "machine learning", "deep learning", "neural network", "LLM", "transformer", "GPT", "diffusion"],
      "excludeKeywords": ["crypto", "blockchain", "web3", "NFT"],
      "minimumContentLength": 200,
      "languageFilter": ["en"],
      "nsfwFilter": true
    }
  },
  "implementation_config": {
    "rate_limiting": {
      "globalRateLimit": 100,
      "globalPeriod": "minute",
      "perSourceLimits": true,
      "backoffStrategy": "exponential",
      "maxRetries": 3,
      "initialBackoffMs": 1000
    },
    "caching": {
      "enabled": true,
      "backend": "redis",
      "ttl": {
        "rss": 3600,
        "api": 1800,
        "scrape": 7200
      },
      "keyPattern": "newsxp:{source}:{hash}"
    },
    "error_handling": {
      "alertThreshold": 5,
      "alertChannels": ["email", "slack"],
      "fallbackStrategies": {
        "rss_to_scrape": true,
        "api_to_cache": true
      }
    },
    "storage": {
      "backend": "postgresql",
      "schema": "newsxp",
      "retention": {
        "articles": "90days",
        "metrics": "365days",
        "logs": "30days"
      }
    },
    "processing": {
      "parallel_workers": 10,
      "queue_backend": "celery",
      "nlp_models": {
        "relevance": "sentence-transformers/all-MiniLM-L6-v2",
        "summarization": "facebook/bart-large-cnn",
        "classification": "custom-ai-news-classifier"
      }
    }
  },
  "monitoring": {
    "health_checks": {
      "enabled": true,
      "interval": "5minutes",
      "endpoints": {
        "health": "/api/health",
        "metrics": "/api/metrics",
        "sources": "/api/sources/status"
      }
    },
    "metrics": {
      "collection": true,
      "exporters": ["prometheus", "datadog"],
      "custom_metrics": [
        "articles_per_source",
        "processing_latency",
        "api_quota_usage",
        "scraping_success_rate"
      ]
    },
    "alerting": {
      "providers": ["pagerduty", "slack"],
      "rules": {
        "source_failure": {
          "threshold": 3,
          "window": "1hour",
          "severity": "warning"
        },
        "api_quota_exceeded": {
          "threshold": 0.9,
          "severity": "critical"
        },
        "processing_backlog": {
          "threshold": 1000,
          "severity": "warning"
        }
      }
    }
  },
  "legal_compliance": {
    "robots_txt": {
      "respect": true,
      "cache_duration": "24hours",
      "user_agent": "NewsXP-Bot/3.0"
    },
    "attribution": {
      "required": true,
      "format": "Source: {source_name} - {url}",
      "include_timestamp": true
    },
    "data_retention": {
      "gdpr_compliant": true,
      "anonymization": true,
      "user_consent_required": false
    },
    "terms_of_service": {
      "review_frequency": "quarterly",
      "compliance_log": true
    }
  }
}